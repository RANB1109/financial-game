  <script>
    function showLevel(id) {
      document.querySelectorAll('.menu, .level').forEach(el => el.classList.remove('active'));
      document.getElementById(id).classList.add('active');
    }
    function goHome() {
      document.querySelectorAll('.menu, .level').forEach(el => el.classList.remove('active'));
      document.getElementById('mainMenu').classList.add('active');
      location.reload();
    }
    function cc(c) {
      const msgs = {
        good1: "‚úÖ Smart move!",
        bad1: "‚ö†Ô∏è Risky choice.",
        good2: "üéâ Good self-control!",
        bad2: "üò¨ That might hurt your score."
      };
      document.getElementById("cc" + c.slice(-1)).innerText = msgs[c];
    }
    let spent = 0, count = 0;
    function spend(a) {
      spent += a;
      if (++count == 3) {
        let saved = 800 - spent;
        document.getElementById("cash").innerText = `Saved: $${saved}\n${saved >= 160 ? "üéØ Great job!" : "üí∏ Try saving more."}`;
      }
    }
    let aspent = 0, ac = 0;
    function adult(a) {
      aspent += a;
      if (++ac == 3) {
        let rem = 1500 - aspent;
        document.getElementById("adult").innerText = `Remaining: $${rem}\n${rem >= 300 ? "üß† On track!" : "ü´£ Tight month!"}`;
      }
    }
    function pitch() {
      let v = val.value.trim(), p = pln.value.trim(), r = ris.value.trim();
      pitch.innerText = v && p && r ?
        "üíº Investment Approved! Great pitch!" :
        "üö´ Fill all fields clearly to get funded.";
    }
  </script>

